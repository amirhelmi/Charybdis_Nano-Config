#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>


/ {
  split_inputs {
    #address-cells = <1>;
    #size-cells = <0>;

    trackball_split: trackball_split@0 {
      compatible = "zmk,input-split";
      reg = <0>;
      // SNIPE PROCESSOR
      snipe {
          layers = <SNI>;
          // Note: The structure for input-processors is an array of phandles, 
          // so you may need to adjust the format slightly based on ZMK version.
          input-processors = <&zip_xy_scaler 1 3>;
      };
  
      // SCROLL PROCESSOR
      scroll {
          layers = <NAV>;
          input-processors = <&zip_xy_transform (INPUT_TRANSFORM_Y_INVERT)>,
                             <&zip_y_scaler 8 1>,
                             <&zip_xy_to_scroll_mapper>;
      };
    };
  };
};
