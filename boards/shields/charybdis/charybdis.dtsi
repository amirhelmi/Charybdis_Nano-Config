#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    /* Battery monitoring for nRF52 VDDH pin */
    vbatt: vbatt {
        compatible = "zmk,battery-nrf-vddh";
    };

    /* Physical to Logical key mapping */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;

        map = <
            RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6)
            RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6)
            RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6)
                                    RC(3,3) RC(3,4) RC(3,1)  RC(3,6) RC(3,8)
        >;
    };

    /* Main Keyboard Matrix Scanner */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
        wakeup-source;
        
        col-gpios
            = <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

        row-gpios
            = <&pro_micro 18 GPIO_ACTIVE_HIGH>
            , <&pro_micro 5 GPIO_ACTIVE_HIGH>
            , <&pro_micro 4 GPIO_ACTIVE_HIGH>
            , <&pro_micro 9 GPIO_ACTIVE_HIGH>
            ;
    };
};

/* Apply offset for the right side in split configuration */
&default_transform {
    col-offset = <5>;
};

/* Enable SPI for the PMW3610 sensor */
&spi0 {
    status = "okay";
};

/* --- Input Layer Definitions --- */
#define DEF 0
#define NUM 1
#define NAV 2
#define SWT 3
#define FN 4
#define SCR 5
#define SNI 6
#define BOOT 7

/ {
    /* Virtual device to handle input data across split halves */
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        trackball_split: trackball_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    /* * Input Listener: Processes trackball data into cursor or scroll movement 
     * Compatible with badjeff PMW3610 driver 
     */
    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        status = "okay"; // Set to okay to enable tracking
        device = <&trackball_split>;

        /* Snipe Mode: Slows down cursor for precision when SNI layer is active */
        snipe {
            layers = <SNI>;
            input-processors = <&zip_xy_scaler 1 3>; 
        };

        /* Scroll Mode: Converts Y-axis movement to scrolling when NAV layer is active */
        scroll {
            layers = <NAV>;
            input-processors = 
                <&zip_xy_transform (INPUT_TRANSFORM_Y_INVERT)>, 
                <&zip_y_scaler 4 1>, 
                <&zip_xy_to_scroll_mapper>;
        };
    };
};
